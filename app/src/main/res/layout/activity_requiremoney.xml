<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_m"
        android:background="#05a9f4"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize" >
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true" >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="借着页面说两句"
                android:textColor="#060300"
                android:id="@+id/textView22"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/req_text"
            android:layout_below="@id/textView22"
            android:text="@string/require_money_1"/>
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/fight"
        android:layout_below="@id/req_text"/>
        <TextView
            android:layout_below="@id/imageView"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/req_text_2"
            android:text="@string/require_money_2"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:background="@drawable/pic_huopotianqi"
            android:layout_below="@id/req_text_2"/>

        </RelativeLayout>
    </ScrollView>



</LinearLayout>
