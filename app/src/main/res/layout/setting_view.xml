<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFFFFF" >
    
    <TableLayout android:id="@+id/TableL01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#05a9f4">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_s"
            android:background="#05a9f4"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize" >
        </android.support.v7.widget.Toolbar>
        
    </TableLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:background="#FAF0E6"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/unit1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical" >

                <TableLayout
                    android:layout_width="match_parent"
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content" >
                   
                     <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >
                         <TextView
                             android:id="@+id/textView3"
                             android:layout_width="100dp"
                             android:layout_height="60dp"
             			     android:textColor="#63B8FF"
               				 android:textSize="25dp"
               				 android:gravity="center"
               				 android:text="单位" />
                         
                       </TableRow>

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >
                        <TextView
                             android:id="@+id/textView2"
                             android:layout_width="0dp"
                             android:layout_weight="1"
                             android:layout_height="80dp"
                             android:gravity="center"
             			     android:textColor="#000000"
               				 android:textSize="25dp"
               				 android:drawableTop="@drawable/c"
               				 android:text="摄氏度" />
                        
                         <TextView
                             android:id="@+id/textView4"
                             android:layout_width="0dp"
                             android:layout_weight="1"
                             android:layout_height="fill_parent"
                             android:gravity="center"
             			     android:textColor="#000000"
               				 android:textSize="25dp"
               				 android:drawableTop="@drawable/d"
               				 android:text="米/秒" />
                         
                          <TextView
                             android:id="@+id/textView5"
                             android:layout_width="0dp"
                             android:layout_weight="1"
                             android:layout_height="fill_parent"
                             android:gravity="center"
             			     android:textColor="#000000"
               				 android:textSize="25dp"
               				 android:drawableTop="@drawable/f"
               				 android:text="百帕" />      
               				             

                    </TableRow>
                    
                     <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >
                          
                          <TextView
                             android:id="@+id/textView6"
                             android:layout_width="0dp"
                             android:layout_weight="1"
                             android:layout_height="80dp"
                             android:gravity="center"
             			     android:textColor="#000000"
               				 android:textSize="25dp"
               				 android:drawableTop="@drawable/g"
               				 android:text="公里" />
                        
                         <TextView
                             android:id="@+id/textView7"
                             android:layout_width="0dp"
                             android:layout_weight="1"
                             android:layout_height="fill_parent"
                             android:gravity="center"
             			     android:textColor="#000000"
               				 android:textSize="25dp"
               				 android:drawableTop="@drawable/h"
               				 android:text="24小时" />
                         
                         <TextView
                             android:id="@+id/textView8"
                             android:layout_width="0dp"
                             android:layout_weight="1"
                             android:layout_height="fill_parent"
                             android:gravity="center"
             			     android:textColor="#000000"
               				 android:textSize="25dp"
               				 android:drawableTop="@drawable/j"
               				 android:text="DD,MM" />
                         
                         
                         
                      </TableRow>

                    

                </TableLayout>

            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/pre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/unit1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:orientation="vertical" >
                
               
                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:textColor="#63B8FF"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:text="一般" />
                
                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="100dp"
                    android:layout_height="42dp"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:text="数据源" />
                
                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="70dp"
                    android:layout_height="42dp"
                    android:textSize="23dp"
                    android:gravity="center"
                    android:text="默认" />
                
                <TextView
                    android:id="@+id/Nothing"
                    android:layout_width="fill_parent"
                    android:layout_height="8dp"
                    android:background="@drawable/xiahua"
                    android:gravity="center"
                    android:text=" " />
                
                 <TextView
                    android:id="@+id/textView12"
                    android:layout_width="130dp"
                    android:layout_height="42dp"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:text="刷新间隔" />
                
                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="100dp"
                    android:layout_height="42dp"
                    android:textSize="23dp"
                    android:text="3小时" />
                
                <TextView
                    android:id="@+id/Nothing1"
                    android:layout_width="fill_parent"
                    android:layout_height="8dp"
                    android:background="@drawable/xiahua"
                    android:gravity="center"
                    android:text=" " />
                
                 <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" >
                 <TextView
                    android:id="@+id/textView14"
                    android:layout_width="100dp"
                    android:layout_height="42dp"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:text="仅WiFi" />
                
                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="280dp"
                    android:layout_height="42dp"
                    android:textSize="23dp"
                    android:layout_below="@+id/textView14"
                    android:gravity="center"
                    android:text="仅在WiFi下自动更新数据" />
                
                <TextView
                    android:id="@+id/Nothing3"
                    android:layout_width="fill_parent"
                    android:layout_height="8dp"
                     android:layout_below="@+id/textView15"
                    android:background="@drawable/xiahua"
                    android:gravity="center"
                    android:text=" " />

                <ToggleButton
                    android:id="@+id/toggleButton1"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textOn=""
                    android:textOff=""
                    android:layout_marginRight="25dp"
                    android:background="@drawable/toggle"
                    android:text="ToggleButton" />
                
                </RelativeLayout>
             
            </LinearLayout>
             <LinearLayout
                android:id="@+id/pre1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/pre"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:orientation="vertical" >
                
               
                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:textColor="#63B8FF"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:text="通知栏" />
                
                <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" >
                 <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:textColor="#000000"
                    android:textSize="25dp"
                     android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="当前天气" />
                
                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="280dp"
                    android:layout_height="42dp"
                    android:textSize="23dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/textView17"
                    android:text="当前及预报详情" />
                
                <TextView
                    android:id="@+id/Nothing4"
                    android:layout_width="fill_parent"
                    android:layout_height="8dp"
                    android:layout_below="@+id/textView18"
                    android:background="@drawable/xiahua"
                    android:gravity="center"
                    android:text=" " />

                <ToggleButton
                    android:id="@+id/toggleButton2"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:textOn=""
                    android:textOff=""
                    android:layout_marginRight="25dp"
                    android:background="@drawable/toggle"
                    android:text="ToggleButton" />
                
                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_below="@+id/Nothing4"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="智能预警" />
                
                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="280dp"
                    android:layout_height="42dp"
                    android:textSize="23dp"
                    android:layout_below="@+id/textView19"
                    android:gravity="center"
                    android:text="当明天有特殊天气时提醒" />
                
                <TextView
                    android:id="@+id/Nothing5"
                    android:layout_width="fill_parent"
                    android:layout_height="8dp"
                    android:layout_below="@+id/textView20"
                    android:background="@drawable/xiahua"
                    android:gravity="center"
                    android:text=" " />

                <TextView
                    android:id="@+id/Beta"
                    android:layout_width="65dp"
                    android:layout_height="42dp"
                    android:layout_above="@+id/textView20"
                    android:layout_marginLeft="22dp"
                    android:layout_toRightOf="@+id/textView19"
                    android:background="#D3D3D3"
                    android:gravity="center"
                    android:text="BETA"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />
                
                </RelativeLayout>
                
                 <TextView
                    android:id="@+id/Cen"
                    android:layout_width="80dp"
                    android:layout_height="42dp"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:text="城市" />
                
                <TextView
                    android:id="@+id/jianggan"
                    android:layout_width="90dp"
                    android:layout_height="42dp"
                    android:textSize="23dp"
                    android:gravity="center"
                    android:text=" 江干区" />
                
                <TextView
                    android:id="@+id/Nothing6"
                    android:layout_width="fill_parent"
                    android:layout_height="8dp"
                    android:background="@drawable/xiahua"
                    android:gravity="center"
                    android:text=" " />
                
                 <TextView
                    android:id="@+id/Location"
                    android:layout_width="80dp"
                    android:layout_height="42dp"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:text="位置" />
                
                <TextView
                    android:id="@+id/normal"
                    android:layout_width="90dp"
                    android:layout_height="42dp"
                    android:textSize="23dp"
                    android:text="  正常" />
                
                <TextView
                    android:id="@+id/Nothing7"
                    android:layout_width="fill_parent"
                    android:layout_height="8dp"
                    android:background="@drawable/xiahua"
                    android:gravity="center"
                    android:text=" " />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                
                    <TextView
                        android:id="@+id/kuozhan"
                        android:layout_width="180dp"
                        android:layout_height="82dp"
                        android:gravity="center"
                        android:text="可扩展通知栏"
                        android:textColor="#000000"
                        android:textSize="25dp" />

                    <ToggleButton
                        android:id="@+id/toggleButton3"
                        android:layout_width="100dp"
                   		android:layout_height="60dp"
                    	android:layout_alignParentRight="true"
                    	android:layout_centerVertical="true"
                    	android:textOn=""
                    	android:textOff=""
                    	android:layout_marginRight="25dp"
                    	android:background="@drawable/toggle"
                    	android:text="ToggleButton" />
                    
                </RelativeLayout>
                
              </LinearLayout>
              
             <LinearLayout
                android:id="@+id/other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/pre1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:orientation="vertical" >
                
               
                <TextView
                    android:id="@+id/oth"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:textColor="#63B8FF"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:text="通知栏" />

                <Button
                    android:id="@+id/Tops"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:background="#FFFFFF"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:text="   高级设置" />
                
                <TextView
                    android:id="@+id/Nothing8"
                    android:layout_width="fill_parent"
                    android:layout_height="8dp"
                    android:background="@drawable/xiahua"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:text=" " />
                
                <Button
                    android:id="@+id/guanyu"
                    android:layout_width="80dp"
                    android:layout_height="42dp"
                    android:background="#FFFFFF"
                    android:textSize="25dp"
                    android:text="关于" />
                
            </LinearLayout>

        </RelativeLayout>
            
    </ScrollView>

</LinearLayout>
